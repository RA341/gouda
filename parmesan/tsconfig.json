{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./source",
		"lib": [
			"DOM",
			"ES2020"
		],
		"moduleResolution": "node"
	},
	"include": [
		"source/**/*"
	],
	"exclude": [
		"node_modules",
		".parcel-cache",
		"distribution"
	]
}
